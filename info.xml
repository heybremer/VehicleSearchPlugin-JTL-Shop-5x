<?xml version="1.0" encoding="UTF-8"?>
<jtlshopplugin>
    <Name>Vehicle Search Plugin</Name>
    <Description>Advanced vehicle search with manufacturer, model and type selection for JTL Shop</Description>
    <Author>Bremer Sitzbezüge</Author>
    <URL>https://bremer-sitzbezuege.de</URL>
    <XMLVersion>100</XMLVersion>
    <ShopVersion>500</ShopVersion>
    <PluginID>VehicleSearchPlugin</PluginID>
    <Version>1.0.0</Version>
    <CreateDate>2025-01-10</CreateDate>
    <Licence>MIT</Licence>
    
    <DescriptionLang>
        <de>Erweiterte Fahrzeugsuche mit Hersteller-, Modell- und Typauswahl</de>
        <en>Advanced vehicle search with manufacturer, model and type selection</en>
        <tr>Gelişmiş araç arama - üretici, model ve tip seçimi</tr>
    </DescriptionLang>
    
    <Install>
        <Migration>
            <Version>1.0.0</Version>
            <File>Migrations/001_create_vehicle_search_tables.php</File>
        </Migration>
        
        <AdminMenu>
            <CustomLink>
                <Name>Vehicle Search Settings</Name>
                <Filename>adminmenu/vehicle_search_settings.php</Filename>
                <Description>Configure vehicle search settings</Description>
            </CustomLink>
        </AdminMenu>
        
        <Frontend>
            <Hook>
                <ID>1</ID>
                <Name>HOOK_HEADER_HTML</Name>
                <Filename>frontend/hooks/header.php</Filename>
            </Hook>
            <Hook>
                <ID>2</ID>
                <Name>HOOK_FOOTER_HTML</Name>
                <Filename>frontend/hooks/footer.php</Filename>
            </Hook>
        </Frontend>
    </Install>
    
    <Uninstall>
        <Migration>
            <Version>1.0.0</Version>
            <File>Migrations/001_drop_vehicle_search_tables.php</File>
        </Migration>
    </Uninstall>
</jtlshopplugin>